<% if @question.errors.present? %>
    <% @question.errors.full_messages.each do |message| %>
    $errorDiv = $('<div><%= j message %></div>').addClass('question_errors');
    $(".container#edit-question-" + question_id).html($errorDiv.html());
    <% end %>
<% else %>
    $('.question_<%= @question.id %>').replaceWith(' <%= j render @question %> ');
    $('.edit-question-link').click(function(e) {
        e.preventDefault();
        $(this).hide();
        question_id = $(this).data('questionId');
        $('form#edit-question-' + question_id).show();
    });
<% end %>